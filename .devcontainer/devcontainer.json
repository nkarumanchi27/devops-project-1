{
    "name": "My Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",  // Specify the base image
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
      "ms-python.python"  // VS Code extensions to install in the container
    ],
    "forwardPorts": [8080],
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "vscode"
  }
  